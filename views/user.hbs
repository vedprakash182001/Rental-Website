<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/statics/css/style.css">

    <title>Document</title>
  </head>
  <body class="background1" >
    {{>navbar}}


    <section class="user_detail mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-5 ">
                    <div class="card order-summary ">
                        <div class="card-body">
                            <h5 class="text-center mb-2">Order Summary Section</h5>
                            <hr>
                            <div class="summary">
                                <p class="me-1">Product Name : </p>
                                <p id="product_name" class="ms-auto">dhfhd</p>
                            </div>
                            <hr>
                            <div class="summary">
                                <p class="me-1">Price : </p>
                                <p id="price"class="ms-auto">user1</p>
                            </div>
                            <hr>
                            <div class="summary">
                                <p class="me-1">Order id : </p>
                                <p id="order_id"class="ms-auto">user1</p>
                            </div>
                            <hr>
                            <div class="summary">
                                <p class="me-1">date : </p>
                                <p id="date"class="ms-auto">dhfhd</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card order-summary">
                        <div class="card-body">
                             <form action="/make_payment" method="post" >
                                <div class="mb-3">
                                    <label for="username" class="form-label">Name</label>
                                    <input name="username" type="text" class="form-control" id="username" aria-describedby="emailHelp" autocomplete="off" required >
                                </div>
                                <div class="mb-3">
                                    <labelclass="form-label">Email address</label>
                                    <input name="useremail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" autocomplete="off" required>
                                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                                </div>
                                <div class="mb-3">
                                    <labelclass="form-label">Phone Number</label>
                                    <input type="number" name="usernumber" id="usernumber" class="form-control" autocomplete="off" required>
                                </div>
                                <div class="mb-3">
                                    <labelclass="form-label">Address</label>
                                    <input name="useraddress" type="text" class="form-control" id="useraddress" aria-describedby="emailHelp" autocomplete="off" required >
                                </div>
                                {{#if error}}
                                    <div class="text-center">
                                        <h5 style="color: red;" >* User Already exist</5>
                                    </div>
                                {{/if}}
                                <div class="container text-center">
                                    <button type="submit" class="btn btn-primary">Proceed for Payment</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{>footer}}

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script>
        let tempname = localStorage.getItem("nameing");
        name = JSON.parse(tempname);
        document.getElementById('product_name').innerHTML = name;

        let tempcost = localStorage.getItem("costing");
        cost = JSON.parse(tempcost);
        document.getElementById('price').innerHTML = cost;

        let temporderid = localStorage.getItem("oderiding");
        orderid = JSON.parse(temporderid);
        document.getElementById('order_id').innerHTML = orderid;

        const date = new Date();
        const str = date.getDate()+"/"+(date.getMonth()+1)+"/"+date.getFullYear();
        document.getElementById('date').innerHTML = str;
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/statics/js/script.js"></script>
  </body>
</html>